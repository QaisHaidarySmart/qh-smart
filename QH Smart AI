    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Chart.js configurations
        document.addEventListener('DOMContentLoaded', function() {
            // Project Chart 1
            const ctx1 = document.getElementById('projectChart1');
            if (ctx1) {
                new Chart(ctx1, {
                    type: 'doughnut',
                    data: {
                        labels: ['نابینایان', 'ناشنوایان', 'معلولان حرکتی', 'اوتیسم'],
                        datasets: [{
                            data: [40, 25, 20, 15],
                            backgroundColor: ['#999999', '#666666', '#cccccc', '#222222']
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                labels: {
                                    color: '#cccccc'
                                }
                            }
                        }
                    }
                });
            }

            // Project Chart 2
            const ctx2 = document.getElementById('projectChart2');
            if (ctx2) {
                new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: ['دقت', 'سرعت', 'کارایی'],
                        datasets: [{
                            label: 'عملکرد',
                            data: [92, 85, 88],
                            backgroundColor: ['#999999', '#666666', '#cccccc']
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                labels: {
                                    color: '#cccccc'
                                }
                            }
                        },
                        scales: {
                            y: {
                                ticks: {
                                    color: '#cccccc'
                                },
                                grid: {
                                    color: '#666666'
                                }
                            },
                            x: {
                                ticks: {
                                    color: '#cccccc'
                                },
                                grid: {
                                    color: '#666666'
                                }
                            }
                        }
                    }
                });
            }

            // Architecture Chart
            const ctx3 = document.getElementById('architectureChart');
            if (ctx3) {
                new Chart(ctx3, {
                    type: 'radar',
                    data: {
                        labels: ['امنیت', 'مقیاس‌پذیری', 'کارایی', 'دسترسی‌پذیری', 'قابلیت اطمینان'],
                        datasets: [{
                            label: 'معماری فعلی',
                            data: [90, 85, 88, 95, 92],
                            backgroundColor: 'rgba(153, 153, 153, 0.2)',
                            borderColor: '#999999',
                            pointBackgroundColor: '#999999'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                labels: {
                                    color: '#cccccc'
                                }
                            }
                        },
                        scales: {
                            r: {
                                angleLines: {
                                    color: '#666666'
                                },
                                grid: {
                                    color: '#666666'
                                },
                                pointLabels: {
                                    color: '#cccccc'
                                },
                                ticks: {
                                    color: '#cccccc'
                                }
                            }
                        }
                    }
                });
            }
        });

        // Donation Slider
        const donationSlider = document.getElementById('donationSlider');
        const donationAmount = document.getElementById('donationAmount');
        const impactResults = document.getElementById('impactResults');

        if (donationSlider && donationAmount && impactResults) {
            donationSlider.addEventListener('input', function() {
                const amount = parseInt(this.value);
                donationAmount.textContent = '$' + amount;
               
                // Calculate impact
                const children = Math.floor(amount / 150);
                const chatbots = Math.floor(amount / 500);
                const months = Math.floor(amount / 100);
               
                impactResults.innerHTML = `
                    <div class="text-center p-6 glass-card">
                        <i class="fas fa-child text-4xl mb-4" style="color: var(--dark-silver);"></i>
                        <div class="text-xl font-bold mb-2">${children} کودک</div>
                        <div>آموزش ${months} ماهه</div>
                    </div>
                    <div class="text-center p-6 glass-card">
                        <i class="fas fa-robot text-4xl mb-4" style="color: var(--dark-silver);"></i>
                        <div class="text-xl font-bold mb-2">${chatbots} چت‌بات</div>
                        <div>توسعه کامل</div>
                    </div>
                `;
            });
        }

        // Form submission
        const contactForm = document.querySelector('#contact form');
        if (contactForm) {
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                alert('پیام شما با موفقیت ارسال شد! به زودی با شما تماس خواهیم گرفت.');
            });
        }

        // Active navigation
        window.addEventListener('scroll', function() {
            const sections = document.querySelectorAll('.section');
            const navLinks = document.querySelectorAll('.nav-link');
           
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                if (pageYOffset >= sectionTop - 200) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === '#' + current) {
                    link.classList.add('active');
                }
            });
        });

        // Animate particles
        function animateParticles() {
            const particles = document.querySelectorAll('.particle');
            particles.forEach((particle, index) => {
                const delay = index * 1000;
                setTimeout(() => {
                    particle.style.animationDuration = (Math.random() * 3 + 4) + 's';
                }, delay);
            });
        }

        animateParticles();
    </script>
